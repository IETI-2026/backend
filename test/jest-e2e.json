{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "testTimeout": 60000,
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1",
    "^@common/(.*)$": "<rootDir>/../src/common/$1",
    "^@users/(.*)$": "<rootDir>/../src/modules/users/$1",
    "^@config/(.*)$": "<rootDir>/../src/config/$1"
  }
}
